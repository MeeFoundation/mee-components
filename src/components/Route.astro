---
interface Props {
  id: string;
  route: string;
  params?: string[]
  withoutDarkTheme?: boolean;
  regexRoute?: boolean;
  isUserPage?: boolean;
}

const { route, id, params, withoutDarkTheme, regexRoute, isUserPage} =
  Astro.props;
---

<template
  id={id}
  data-route={route}
  data-params={params?.join("|")}
  data-without_dark_theme={withoutDarkTheme ? 1 : 0}
  data-regex_route={regexRoute ? 1 : 0}
  data-is_users_page={isUserPage ? 1 : 0}
  class="route-item"
>
  <slot />
</template>
