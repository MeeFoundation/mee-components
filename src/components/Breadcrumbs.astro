---
interface Breadcrumb {
  link: string;
  title: string;
}
interface Props {
  breadcrumbs: Breadcrumb[];
}
const { breadcrumbs } = Astro.props;
---

<div
  class="rounded-md border border-grey-300 bg-grey-50 px-2 py-1 text-sm text-brand-700"
>
  {
    breadcrumbs.map((breadcrumb, index) => (
      <Fragment>
        <a
          href={breadcrumb.link}
          class:list={[
            "px-2 hover:text-grey-700",
            index === breadcrumbs.length - 1 && "text-grey-700",
          ]}
        >
          {breadcrumb.title}
        </a>
        {index !== breadcrumbs.length - 1 && <i class="bi bi-chevron-right" />}
      </Fragment>
    ))
  }
</div>
