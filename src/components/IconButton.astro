---
interface Props {
  className?: string;
  id?: string;
  type?: "submit" | "reset" | "button" | undefined | null;
  size?: "l" | "m" | "s";
  buttonType?: "primary" | "secondary" | "tertiary" | "danger";
  style?: "filled" | "outlined" | "transparent";
  icon: string;
  disabled?: boolean;
}

const {
  className,
  id,
  type = "button",
  buttonType = "primary",
  style = "filled",
  size = "l",
  icon,
  disabled,
} = Astro.props;
---

<button
  id={id}
  type={type}
  disabled={disabled}
  class:list={[
    "box-border flex flex-none grow-0 flex-row items-center justify-center gap-2 rounded-md border border-solid font-semibold z-10",
    `${buttonType}-${style}`,
    "disabled:cursor-default disabled:opacity-60",
    size === "l" && "size-11",
    size === "m" && "size-9",
    size === "s" && "size-7.5",
    className,
  ]}
>
  <i
    class:list={[
      "bi font-thin",
      "bi-" + icon,
      size === "l" && "text-4xl",
      size === "m" && "text-3xl",
      size === "s" && "text-2xl",
    ]}
  />
</button>

<style>
  .primary-filled {
    @apply bg-primary-gradient disabled:hover:bg-primary-gradient hover:bg-primary-gradient-hover border-brand-600 text-white hover:border-brand-800 focus:shadow-button disabled:hover:border-brand-600;
  }

  .primary-outlined {
    @apply border-brand-700 bg-transparent text-brand-700 focus:shadow-button;
  }
  .primary-transparent {
    @apply border-0 bg-transparent text-brand-700 hover:text-brand-800 focus:shadow-button focus:text-brand-800 focus:border-brand-700 focus:border;
  }

  .secondary-filled {
    @apply border-brand-300 bg-brand-50 text-brand-700 hover:bg-brand-100 focus:shadow-button disabled:hover:bg-brand-50;
  }

  .secondary-outlined {
    @apply border-brand-300 bg-transparent text-brand-700 focus:shadow-button;
  }
  .secondary-transparent {
    @apply border-none bg-transparent text-brand-700 hover:text-brand-800 focus:shadow-button focus:text-brand-800;
  }

  .tertiary-filled {
    @apply border-gray-300 bg-gray-50 text-gray-700 hover:bg-gray-100 focus:shadow-button-tertiary disabled:hover:bg-gray-50;
  }

  .tertiary-outlined {
    @apply border-gray-300 bg-white text-gray-700 focus:shadow-button-tertiary;
  }
  .tertiary-transparent {
    @apply border-none bg-transparent text-gray-700 hover:text-gray-800 focus:shadow-button-tertiary focus:text-gray-800;
  }

  .danger-filled {
    @apply border-error-700 bg-error-700 text-white hover:bg-error-800 focus:shadow-button-danger disabled:hover:bg-error-700;
  }

  .danger-outlined {
    @apply border-error-700 bg-white text-error-700 focus:shadow-button-danger;
  }
  .danger-transparent {
    @apply border-0 bg-transparent text-error-700 hover:text-error-800 focus:shadow-button-danger focus:text-error-800 focus:border-error-700 focus:border;
  }
</style>