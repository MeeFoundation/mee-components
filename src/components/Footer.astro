---
export interface Props {
  mode: "dark" | "light";
  footer: {
    links: Link[];
    rightLinks: Link[];
  };
}

interface Link {
  link: string;
  target?: string;
  name?: string;
  icon?: string;
}

const { mode, footer } = Astro.props;
---

<footer
  id="footer"
  class:list={[
    "footer z-200 flex w-[200vw] flex-col items-center justify-center pt-16 md:w-[120vw]",
    {
      "footer--fill text-white": mode === "dark",
      "text-blue": mode === "light",
    },
  ]}
>
  <div
    class:list={[
      "flex w-screen max-w-7xl flex-col items-center justify-between gap-7 px-5 pb-10 text-sm font-medium leading-none tracking-wider xl:flex-row",
      { "text-white": mode === "dark", "text-gray": mode === "light" },
    ]}
  >
    <span class="hidden whitespace-nowrap xl:inline xl:w-1/3"
      >© {new Date().getFullYear()} The Mee Foundation, Inc.</span
    >
    <ul
      class="flex flex-row gap-7 whitespace-nowrap text-center md:gap-10 xl:w-1/3 xl:justify-center"
    >
      {
        footer.links.map((link) => (
          <li>
            <a
              href={link.link}
              target={link.target}
              class="flex items-center gap-2"
            >
              {link.icon && (
                <i class:list={["bi text-2xl font-thin", "bi-" + link.icon]} />
              )}
              {link.name}
            </a>
          </li>
        ))
      }
    </ul>
    <div
      class="flex flex-wrap items-center justify-center gap-8 whitespace-nowrap xl:w-1/3 xl:flex-nowrap xl:justify-end"
    >
      {
        footer.rightLinks.map((link) => (
          <a
            href={link.link}
            target={link.target}
            class="flex items-center gap-2"
          >
            {link.icon && (
              <i class:list={["bi text-2xl font-thin", "bi-" + link.icon]} />
            )}
            {link.name}
          </a>
        ))
      }
    </div>
    <span class="inline xl:hidden"
      >© {new Date().getFullYear()} The Mee Foundation, Inc.</span
    >
  </div>
</footer>

<style>
  .footer {
    border-top-left-radius: 50%;
    border-top-right-radius: 50%;
    background-color: white;
  }

  .footer--fill {
    background: linear-gradient(258.14deg, #4f868e 22.66%, #3b5b63 71.18%) left
      bottom no-repeat;
  }
  .link::after {
    content: "";
    mask: url("/images/arrow-right.svg") no-repeat center;
    display: block;
    width: 21px;
    height: 12px;
  }

  a:hover {
    text-decoration: underline;
  }
</style>
